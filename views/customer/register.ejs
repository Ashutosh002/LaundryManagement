<%- include('../partials/header') %>
<div class="register-container">
  <header id="login--register--header">
    <h1>Welcome to Laundry Service <span id="blink">âœ¨</span></h1>
  </header>

  <main class="register-main ">
    <h1>Register</h1>
    <form onsubmit="return validate()" action="/register" method="POST" class="register-form">

      <div class="form-group">
          <label for="email">Email</label>
            <div class="username-default">
              <input id="email" type="email" name="username" placeholder="Email Address">
            </div>
          <small>Error message</small>
      </div>

      <div class="form-group">
          <label for="password">Password</label>
          <div class="password-flex"> 
            <input id="pass" type="password" name="password" placeholder="At least 6 characters">
            <img onmousedown="mousedown()" onmouseup="mouseup()" id="visible" src="/eye.png" title="Click and Hold to make password visible."></div>
          <small>Error message</small>
      </div>

      <div class="form-group">
          <label for="fullname">Full Name</label>
            <div class="fullname-flex">
              <input id="fname" type="text" name="fname" placeholder="First Name">
              <input id="lname" type="text" name="lname" placeholder="Last Name">
            </div>
          <small>Error message</small>
      </div>

      <div class="form-group">
          <label for="phoneno">Phone No.</label>
          <div class="tel-default">
            <input id="tel" type="tel" name="phoneno" placeholder="10 - Digit Phone No.">
          </div>
          <small>Error message</small>
      </div>

      <div class="form-group">
          <label for="address">Address</label>
            <div class="address-grid">
              <input id="street" type="text" placeholder="Street" name="street">
              <input id="city" type="text" placeholder="City" name="city">
              <input id="state" type="text" placeholder="State" name="state">
              <input id="zipcode" type="text" placeholder="Zipcode" name="zipcode">
            </div>
          <small>Error message</small>
      </div>

      <div class="form-group">
          <label for="securityquestion">Choose a Security Question</label>
            <div class="securityquestion-default">
              <select name="securityquestion">
                <option value="" disabled selected>--Select--</option>
                <option value="Favorite Food?">Favorite Food?</option>
                <option value="Favorite Teacher's Name?">Favorite Teacher's Name?</option>
                <option value="Favorite movie?">Favorite Movie?</option>
                </select>
                <input id="answer" placeholder="Answer" type="text" name="answer">
            </div>
          <small>Error message</small>
      </div>

      <button type="submit" class="register-button">Register</button>
      <a href="/" id="links">Already Have an account?</a>
    </form>
  </main>
</div>

<%- include('../partials/footer') %>
