<%- include('../partials/header') %>
<div class="login-container">

  <header id="login--register--header">
    <h1>Welcome to Laundry Service <span id="blink">âœ¨</span></h1>
  </header>

  <main class="login-main">
    <h1>Login</h1>
    <form action="/login" method="POST" class="login-form">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="username" id="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" required>
        </div>
        <button type="submit" class="login-button">Submit</button>

        <div id="links">
            <a href="/enterusername" role="button">Forgot Password?</a>
            <a href="/register" role="button">Register</a>
        </div>
    </form>
  </main>
</div>

